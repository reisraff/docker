#!/usr/bin/env python

import sys
import os

help_message = """
BUILD-CONTAINER

Usage:
    {} [container-name] [-d]

Options:
    -d                  Detached mode
"""

if 2 > len(sys.argv):
    sys.stderr.write(help_message.format(sys.argv[0]))
    sys.stderr.flush()
    sys.exit(1)

container_name = sys.argv[1]

docker_compose_bin_folder = os.path.dirname(os.path.realpath(__file__))
root_folder = os.path.dirname(docker_compose_bin_folder)
docker_compose_file = os.path.join(root_folder, 'docker-compose.yml')

command = 'docker-compose -f {} build --no-cache --pull --force-rm {}'
command = command.format(
    docker_compose_file,
    container_name
)

os.system(command)
